---
import Section from "../Section.astro";
import GitHub from "@/icons/GitHub.astro";

import { projects } from "@cv"
---

<Section title="Algunos proyectos...">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive, github }) => {
                return(
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} title={`Ver el proyecto ${name}`}>
                                        {name}
                                    </a>    
                                    {
                                        isActive && <span>&bull;</span>
                                    }
                                    {github && (
                                        <a
                                            class="github-code-link"
                                            href={github}
                                            target="_blank"
                                            title={`Ver cÃ³digo fuente del proyecto ${name}`}
                                        >
                                            <GitHub />
                                        </a>
                                    )}
                                </h3>
                                <p>{description}</p>
                            </header>

                            <footer>
                                {
                                    highlights.map((highlight) => {
                                        return(
                                            <span class="mostrar">{highlight}</span>
                                        )
                                    })
                                }
                            </footer>
                        </article>    
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
        gap: 1rem;
        margin-inline: -16px;
    }


    article {
        border-radius: 9px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;

        transition: filter 0.2s ease-in-out;
        filter: drop-shadow(0 0 0.5rem rgba(0, 0, 0, 0.1));
        
        background-color: #fff;
    }

    article:hover,
    article:focus-visible {
        filter: drop-shadow(0 0 0.5rem rgba(0, 0, 0, 0.2));
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
        color: #111;
        font-size: 1.1rem;
        font-weight: 500;
    }

    article h3 span {
        color: rgb(0, 188, 47);
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.8rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;   
    }

    footer span {
        border-radius: 6px;
        background-color: #eee;
        color: #444;
        font-size: 0.7rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
