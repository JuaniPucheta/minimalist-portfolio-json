---
import Section from "../Section.astro";

import { work } from "@cv"
---

<Section title="Experiencia laboral">
    <ul>
        {
            work.map(({name, startDate, endDate, position, summary, tipo}) => {
                const endYear = endDate ? new Date(endDate).getFullYear() : "Actualmente"
                return(
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        {name} - <span>{ tipo }</span>
                                    </h3>
                                    <p>{position}</p>
                                </div>
                                <time>
                                    {startDate} - {endYear}
                                </time>
                            </header>

                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                )}
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
    }

    span {
        border-radius: 6px;
        background-color: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.5rem;
    }
</style>
